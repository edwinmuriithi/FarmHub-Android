<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="168dp"
            android:layout_height="136dp"
            app:srcCompat="@drawable/farmhub_logo"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="123dp"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="84dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="408dp"
            android:layout_height="113dp"
            android:background="@drawable/custom_button_main"
            android:text="Do you have farming questions to ask? Click here to talk to an expert!"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="330dp"

            />

        <Button
            android:id="@+id/button2"
            android:layout_width="407dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_button_main"
            android:text="Do you want to learn more about farming? Click here to watch farming videos for free!"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="442dp" />

</androidx.constraintlayout.widget.ConstraintLayout>