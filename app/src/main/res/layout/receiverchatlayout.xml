<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receivermessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingRight="40dp"
        android:paddingBottom="7dp"
        android:text="Receiver Message Display Here "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/timeofmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/receivermessage"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/receivermessage"
        android:padding="7dp"
        android:text="20:09"
        android:textColor="#434343"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receivermessage" />
</androidx.constraintlayout.widget.ConstraintLayout>